<UserControl x:Name="KeyUserControl"
             x:Class="VirtualKeyboard.Views.Controls.KeyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualKeyboard.Views"
             xmlns:converters="clr-namespace:VirtualKeyboard.Converters"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToIntegerConverter x:Key="BooleanToIntegerConverter"/>
    </UserControl.Resources>

    <Viewbox Width="{Binding Height, RelativeSource={RelativeSource Self}}">
        <Button Click="ButtonBase_OnClick"
                MouseEnter="UIElement_OnMouseEnter" MouseLeave="UIElement_OnMouseLeave"
                FontFamily="Courier New"
                Content="{Binding Key, ElementName=KeyUserControl}"
                Margin="{Binding IsSelected, ElementName=KeyUserControl, 
                Converter={StaticResource BooleanToIntegerConverter}, ConverterParameter=0|1}">
        </Button>
    </Viewbox>
</UserControl>
